<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find tr2_description)/urdf/base/base.gazebo.xacro" />
	<xacro:include filename="$(find tr2_description)/urdf/base/base.transmission.xacro" />

	<!-- wheel macros -->
  <xacro:macro name="tr2_wheel" params="name *origin">
		<joint name="${name}" type="continuous">
			<parent link="base_link"/>
			<child link="${name}_link"/>
		  <axis xyz="0 1 0"/>
			<xacro:insert_block name="origin" />
    	<dynamics damping="0.1" friction="0.1"/>
		</joint>
		<link name="${name}_link">
			<collision>
				<geometry>
		      <mesh filename="package://tr2_description/meshes/dae/wheel.dae" scale="0.001 0.001 0.001"/>
				</geometry>
				<origin rpy="1.5708 0 0" />
			</collision>
			<inertial>
				<mass value="1.0"/>
				<inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0" />
			</inertial>
			<visual>
				<geometry>
		      <mesh filename="package://tr2_description/meshes/dae/wheel.dae" scale="0.001 0.001 0.001"/>
				</geometry>
				<origin rpy="1.5708 0 0" />
			</visual>
		</link>
	</xacro:macro>

	<!-- resulting links and joints -->
	<link name="base_link">
		<collision>
			<geometry>
        <mesh filename="package://tr2_description/meshes/dae/base.dae" scale="0.001 0.001 0.001"/>
			</geometry>
			<origin rpy="0 0 3.141592" />
		</collision>
		<inertial>
			<mass value="1.0"/>
			<inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0" />
		</inertial>
		<visual>
			<geometry>
        <mesh filename="package://tr2_description/meshes/dae/base.dae" scale="0.001 0.001 0.001"/>
			</geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
			<origin rpy="0 0 3.141592" />
		</visual>
	</link>

	<xacro:tr2_wheel name="b0l">
		<origin rpy="0 0 -1.570796" xyz="-0.293310 0.0 -0.0725"/>
	</xacro:tr2_wheel>

	<xacro:tr2_wheel name="b0r">
		<origin rpy="0 0 1.570796" xyz="0.293310 0.0 -0.0725"/>
	</xacro:tr2_wheel>

</robot>


